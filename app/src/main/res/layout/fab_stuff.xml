<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/redcircle"
        android:layout_width="134dp"
        android:layout_height="127dp"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="32dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/compareFriends"
        app:layout_constraintVertical_bias="0.93"
        app:srcCompat="@drawable/red_circle" />

    <ImageView
        android:id="@+id/greencircle"
        android:layout_width="134dp"
        android:layout_height="127dp"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="32dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/compareFriends"
        app:layout_constraintVertical_bias="0.576"
        app:srcCompat="@drawable/green_circle" />

    <ImageView
        android:id="@+id/cross"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/animated_vector_cross"
        app:layout_constraintBottom_toBottomOf="@+id/redcircle"
        app:layout_constraintEnd_toEndOf="@+id/redcircle"
        app:layout_constraintHorizontal_bias="0.617"
        app:layout_constraintStart_toStartOf="@+id/redcircle"
        app:layout_constraintTop_toTopOf="@+id/redcircle"
        app:layout_constraintVertical_bias="0.481" />

    <ImageView
        android:id="@+id/done"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="@+id/greencircle"
        app:layout_constraintEnd_toEndOf="@+id/greencircle"
        app:layout_constraintStart_toStartOf="@+id/greencircle"
        app:layout_constraintTop_toTopOf="@+id/greencircle"
        app:layout_constraintVertical_bias="0.489"
        app:srcCompat="@drawable/progress_tick_mark" />

    <TextView
        android:id="@+id/textview_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="182dp"
        android:background="@color/colorPrimary"
        android:padding="8dp"
        android:text="Remove"
        android:textColor="#ffffff"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fab2_delete" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab2_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="176dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:elevation="16dp"
        android:focusable="true"
        android:hapticFeedbackEnabled="true"
        android:visibility="invisible"
        app:backgroundTint="#ffffff"
        app:elevation="6dp"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="33dp"
        app:pressedTranslationZ="12dp"

        app:srcCompat="@drawable/remove_user"
        app:tint="@null" />


    <TextView
        android:id="@+id/textview_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="111dp"
        android:background="@color/colorPrimary"
        android:padding="8dp"
        android:text="Add"
        android:textColor="#ffffff"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fab1_add" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab1_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="106dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:hapticFeedbackEnabled="true"
        android:transitionName="activity_trans"
        android:visibility="invisible"
        app:backgroundTint="#ffffff"
        app:elevation="6dp"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="33dp"
        app:pressedTranslationZ="12dp"
        app:srcCompat="@drawable/add_user"
        app:tint="@null" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:elevation="16dp"
        android:focusable="true"
        android:hapticFeedbackEnabled="true"
        android:visibility="visible"
        app:backgroundTint="#ffffff"
        app:elevation="6dp"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="33dp"
        app:pressedTranslationZ="12dp"
        app:srcCompat="@drawable/add"
        app:tint="@null" />


</androidx.constraintlayout.widget.ConstraintLayout>